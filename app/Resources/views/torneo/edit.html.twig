{% extends 'base.html.twig' %}

{% block _body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                    <h2 style="font-size: 200%; color: teal"><b>Editar Torneo</b></h2>
                <ul class="header-dropdown m-r--5">
                </ul>
            </div>
            <div class="body">
              {{ form_start(edit_form) }}
                  {{ form_label(edit_form.fecha_inicio) }}
                  <div class="form-group">
                      <div class="form-line">
                          {{ form_widget(edit_form.fecha_inicio) }}
                      </div>

                      {{ form_label(edit_form.fecha_fin) }}
                      <div class="form-group">
                          <div class="form-line">
                              {{ form_widget(edit_form.fecha_fin) }}
                          </div>

                          {{ form_label(edit_form.nombre) }}
                          <div class="form-group">
                              <div class="form-line">
                                  {{ form_widget(edit_form.nombre) }}
                              </div>
                          </div>

                          <label>Cantidad de Sets</label>
                          <div class="form-group">
                              <div class="form-line">
                                  {{form_widget(edit_form.sets)}}
                              </div>
                          </div>

                          <label>Puntos por set</label>
                          <div class="form-group">
                              <div class="form-line">
                                  {{ form_widget(edit_form.puntos) }}
                              </div>
                          </div>
                          <button type="submit" class="btn bg-teal waves-effect" style="margin-top: 10px">
                                        <i class="material-icons">edit</i>
                                        <span>Editar</span>
                                    </button>
              {{ form_end(edit_form) }}
                      {{ form_start(delete_form) }}
                      <button type="submit" class="btn bg-red waves-effect" style="margin-top: 10px">
                                    <i class="material-icons">delete</i>
                                    <span>Borrar</span>
                                </button>
                      {{ form_end(delete_form) }}
                    </div>
                </div>
                <a href="{{ path('torneo_admin_index')}}">
                <button type="submit" class="btn bg-teal waves-effect">
                              <i class="material-icons">arrow_back</i>
                              <span>Regresar</span>
                          </button>
                </a>
            </div>
            </div>
        </div>
        </div>


{% endblock _body %}
{% block extraJS %}
<!-- Moment Plugin Js -->
<script src="{{ asset("bundles/app/plugins/momentjs/moment.js")}}"></script>

<!-- Bootstrap Material Datetime Picker Plugin Js -->
<script src="{{ asset("bundles/app/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js")}}"></script>
<script type="text/javascript">
jQuery(document).ready(function () {
    $('#appbundle_torneo_fecha_fin').bootstrapMaterialDatePicker
        ({
            weekStart : 0, time: false, format: 'DD-MM-YYYY'
        });
        $('#appbundle_torneo_fecha_inicio').bootstrapMaterialDatePicker
        ({
            weekStart : 0, time: false, format: 'DD-MM-YYYY'
        }).on('change', function(e, date)
        {
            $('#appbundle_torneo_fecha_fin').bootstrapMaterialDatePicker('setMinDate', date);
        });
});

</script>
{% endblock extraJS %}
