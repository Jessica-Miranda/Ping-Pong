{% extends 'base.html.twig' %}
{% block _body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2 style="font-size: 200%; color: teal">
                    <b>Lista de Torneos</b>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">

                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="{{ path('torneo_admin_new') }}">Crear nuevo torneo</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                        <tbody>
                        {% for torneo in torneos %}

                        <tr>
                            <th>Nombre</th>
                            <td><a href="{{ path('torneo_admin_show', { 'id': torneo.id }) }}">{{ torneo.nombre }}</a></td>
                        </tr>

                        <tr>
                            <th>Fecha de inicio</th>
                            <td>{% if torneo.fechainicio %}{{ torneo.fechainicio|date('Y-m-d') }}{% endif %}</td>
                        </tr>

                        <tr>
                            <th>Fecha de finalizaci√≥n</th>
                            <td>{% if torneo.fechafin %}{{ torneo.fechafin|date('Y-m-d') }}{% endif %}</td>
                        </tr>

                        <tr>
                            <th>Cantidad de sets</th>
                            <td>{{ torneo.sets }}</td>
                        </tr>

                        <tr>
                            <th>Punteo por set</th>
                            <td>{{ torneo.puntos }}</td>
                        </tr>

                        <tr>
                            <th>Opciones</th>
                            <td>

                              <div class="btn-group" role="group">
                                <a href="{{ path('torneo_admin_show', { 'id': torneo.id }) }}" class="btn bg-teal waves-effect">Ver Torneo</a>
                                <a href="{{ path('torneo_admin_users', { 'id': torneo.id }) }}" class="btn bg-teal waves-effect">Asignar jugadores</a>
                                <a href="{{ path('torneo_admin_edit', { 'id': torneo.id }) }}" class="btn bg-teal waves-effect">Editar</a>
                                                              </div>
                            </td>
                        </tr>

                        {% endfor %}
                        </tbody>
                    </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock _body %}
