{% extends 'base.html.twig' %}

{% block _body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Lista de Torneos
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">

                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="{{ path('torneo_admin_new') }}">Crear nuevo torneo</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fecha_inicio</th>
                                <th>Fecha_fin</th>
                                <th>Nombre</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for torneo in torneos %}
                            <tr>
                                <td><a href="{{ path('torneo_admin_show', { 'id': torneo.id }) }}">{{ torneo.id }}</a></td>
                                <td>{% if torneo.fechainicio %}{{ torneo.fechainicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if torneo.fechafin %}{{ torneo.fechafin|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ torneo.nombre }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('torneo_admin_show', { 'id': torneo.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('torneo_admin_edit', { 'id': torneo.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock _body %}
