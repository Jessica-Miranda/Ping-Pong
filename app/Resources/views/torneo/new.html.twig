{% extends 'base.html.twig' %}

{% block _body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2 style="font-size: 200%; color: teal">
                    <b>Creaci√≥n del torneo</b>
                </h2>
            </div>
            <div class="body">
                {{ form_start(form) }}
                {{ form_label(form.fecha_inicio) }}
                <div class="form-group">
                    <div class="form-line">
                        {{ form_widget(form.fecha_inicio) }}
                    </div>
                </div>
                {{ form_label(form.fecha_fin) }}
                <div class="form-group">
                    <div class="form-line">
                        {{ form_widget(form.fecha_fin) }}
                    </div>

                </div>

                {{ form_label(form.nombre) }}
                <div class="form-group">
                    <div class="form-line">
                        {{ form_widget(form.nombre) }}
                    </div>
                </div>

                {{ form_label(form.sets) }}
                <div class="form-group">
                    <div class="form-line">
                        {{form_widget(form.sets)}}
                    </div>
                </div>

                {{ form_label(form.puntos) }}
                <div class="form-group">
                    <div class="form-line">
                        {{ form_widget(form.puntos) }}
                    </div>
                </div>

                <button type="submit" class="btn bg-teal waves-effect" style="margin-top: 10px">
                              <i class="material-icons">add</i>
                              <span>Crear</span>
                          </button>
                {{ form_end(form) }}
                </div>
                <a href="{{ path('torneo_admin_index')}}">
                <button type="submit" class="btn bg-teal waves-effect" style="margin-bottom: 20px; margin-left: 20px">
                              <i class="material-icons">arrow_back</i>
                              <span>Regresar</span>
                          </button>
                </a>
            </div>
        </div>
    </div>
    {% endblock _body %}
    {% block extraJS %}
    <!-- Moment Plugin Js -->
    <script src="{{ asset("bundles/app/plugins/momentjs/moment.js")}}"></script>

    <!-- Bootstrap Material Datetime Picker Plugin Js -->
    <script src="{{ asset("bundles/app/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js")}}"></script>
    <script type="text/javascript">
    jQuery(document).ready(function () {
        $('#appbundle_torneo_fecha_inicio').bootstrapMaterialDatePicker({ weekStart : 0, time: false, format: 'DD-MM-YYYY' })
        .on('change', function(e, date) {
            $('#appbundle_torneo_fecha_fin').bootstrapMaterialDatePicker('setMinDate', date);
        });

        $('#appbundle_torneo_fecha_fin').bootstrapMaterialDatePicker({ weekStart : 0, time: false, format: 'DD-MM-YYYY' });
    });

    </script>
{% endblock extraJS %}
