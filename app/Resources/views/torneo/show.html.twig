{% extends 'base.html.twig' %}

{% block _body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2 style="font-size: 200%; color: teal">
                    <b>Creación del torneo</b>
                </h2>
            </div>
            <div class="body">
                <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
    <tbody>
              <tr>
              <th>Nombre</th>
                <td>{{ torneo.nombre }}</td>
              </tr>
                <br>
                <tr>
                    <th>Fecha de inicio</th>
                      <td>{% if torneo.fechainicio %}{{ torneo.fechainicio|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                  <th>Fecha de finalización</th>
                  <td>{% if torneo.fechafin %}{{ torneo.fechafin|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                  <th>Id</th>
                  <td>{{ torneo.id }}</td>
                </tr>
                <tr>
                    <th>Cantidad de sets</th>
                    <td>{{ torneo.sets }}</td>
                </tr>
                <tr>
                    <th>Punteo por set</th>
                    <td>{{ torneo.puntos }}</td>
                </tr>
        </tbody>
    </table>
    </div>
    </div>

            <a href="{{ path('torneo_admin_edit', { 'id': torneo.id }) }}">
            <button type="submit" class="btn bg-teal waves-effect" style="margin-left: 20px; margin-bottom: 20px">
                          <i class="material-icons">edit</i>
                          <span>Editar</span>
                      </button>
            </a>

            <a href="{{ path('torneo_admin_index')}}">
            <button type="submit" class="btn bg-teal waves-effect" style="margin-left: 20px; margin-bottom: 20px">
                          <i class="material-icons">arrow_back</i>
                          <span>Regresar</span>
                      </button>
            </a>


    </div>
    </div>
{% endblock _body %}
