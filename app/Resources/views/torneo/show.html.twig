{% extends 'base.html.twig' %}

{% block _body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2 style="font-size: 200%; color: teal">
                    <b>Creación del torneo</b>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="{{ path('torneo_admin_index') }}">Regresar</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
    <tbody>
              <tr>
              <th>Nombre</th>
                <td>{{ torneo.nombre }}</td>
              </tr>
                <br>
                <tr>
                    <th>Fecha de inicio</th>
                      <td>{% if torneo.fechainicio %}{{ torneo.fechainicio|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                  <th>Fecha de finalización</th>
                  <td>{% if torneo.fechafin %}{{ torneo.fechafin|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                  <th>Id</th>
                  <td>{{ torneo.id }}</td>
                </tr>
                <tr>
                    <th>Cantidad de sets</th>
                    <td>{{ torneo.sets }}</td>
                </tr>
                <tr>
                    <th>Punteo por set</th>
                    <td>{{ torneo.puntos }}</td>
                </tr>
        </tbody>
    </table>
    </div>
    </div>

            {{ form_start(delete_form) }}
            <a href="{{ path('torneo_admin_edit', { 'id': torneo.id }) }}">
            <button type="submit" class="btn bg-teal waves-effect" style="margin-top: 10px; margin-left: 20px">
                          <i class="material-icons">edit</i>
                          <span>Editar</span>
                      </button>
            </a>
            {{ form_end(delete_form) }}
            <br>



    </div>
    </div>
{% endblock _body %}
