{% extends 'base.html.twig' %}
{% block _body %}
<div class="col-lg-12 col-md-6 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2 style="font-size: 200%; color: teal">
                <b>
                    Plusti - Pong
                </b>
            </h2>
        </div>
        <div class="body">
            <div id="carousel-example-generic_2" class="carousel slide" data-ride="carousel" style="margin-bottom: 20px">
                <!-- Indicators -->

                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="{{ asset('bundles/app/3.png')}}" />
                    </div>
                    <div class="item">
                        <img src="{{ asset('bundles/app/4.png')}}" />
                    </div>
                    <div class="item">
                        <img src="{{ asset('bundles/app/1.png')}}" />
                    </div>
                    <div class="item">
                        <img src="{{ asset('bundles/app/2.png')}}" />
                    </div>
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic_2" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic_2" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>


            <tbody>
                {% for torneo in torneos %}
                <div class="col-lg-3 " style="margin-top: 50px;" height= "200%">
                    <div class="card">
                        <div class="header bg-deep-white">
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="{{ url("torneo_admin_complete_list")}}" class=" waves-effect waves-block">Ver torneo</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <center><img src="{{ asset('bundles/app/logo.png')}}"  style="border-radius: 60px; margin-bottom: -65px" width="100" height="118"/></center>
                        </div>
                        <div style="border: 10px">
                        <div class="body bg-red" style="text-overflow: inherit;">
                            <center>
                            <h2>Nombre:</h2>
                            <h2 style="word-break: break-all;"> {{ torneo.nombre }} </h2>
                            </center>
                        </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </tbody>

        </div>
    </div>
</div>
{% endblock _body %}
